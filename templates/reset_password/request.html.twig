{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Réinitialisation d'un mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="bg-red" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-shadow-lg shadow-red font-sans text-4xl text-center font-bold
    uppercase">Réinitialisation d'un mot de passe</h1>
<section class="flex justify-center items-center h-full">
<div class="block p-6 rounded-lg shadow-lg bg-red max-w-xl">
    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
    <div>
        <small>
            Entrer votre adresse e-mail et nous vous enverrons un lien pour
            réinitialiser votre mot de passe.
        </small>
    </div>

    <button class="
      w-full
      btn text-center inline-block px-6 py-2.5 bg-white text-black font-medium text-md
      leading-tight uppercase rounded hover:opacity-50 hover:shadow-lg
      focus:bg-gray-300 focus:shadow-lg focus:outline-none focus:ring-0
      active:bg-gray-400 active:shadow-lg transition duration-150 ease-in-out">
        Envoyer l'e-mail de réinitialisation
    </button>
    {{ form_end(requestForm) }}
</div>
</section>
{% endblock %}
