{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Ajout d'une série{% endblock %}
{% block body %}
    <h1 class="font-sans text-2xl lg:text-5xl text-center">Création d'une nouvelle série</h1>
    <section class="flex justify-center items-center">
        <div class="block p-6 my-5 rounded-lg shadow-lg bg-red max-w-md">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn text-center inline-block px-6 py-2.5 mt-5 bg-white text-black font-medium text-md leading-tight uppercase rounded hover:bg-black hover:text-white hover:shadow-lg focus:bg-gray-300 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-400 active:shadow-lg transition duration-150 ease-in-out">
                Ajouter une série
            </button>
            {{ form_end(form) }}
            <div class="mt-5">
                {{ component('_button', {
                    buttonUrl: path('program_index'),
                    buttonText: 'Retour',
                }) }}
            </div>
        </div>
    </section>

{% endblock %}