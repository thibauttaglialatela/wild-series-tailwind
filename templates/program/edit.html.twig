<section class="flex flex-col justify-center items-center">
    <div class="block p-6 my-5 rounded-lg shadow-lg bg-red max-w-xl">
        {{ include('program/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        <div class="mt-5">
            {{ component('_button', {
                buttonUrl: path('program_show', {'id': program.id}),
