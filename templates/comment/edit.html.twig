{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'comment.edition'|trans }}{% endblock %}

{% block body %}
    <h1 class="text-center text-shadow-lg shadow-red uppercase font-extrabold font-serif text-4xl md:text-5xl xl:text-6xl my-4 md:my-8 md:mx-12">
        {{ 'comment.edition'|trans }}
    </h1>
    <section class="flex flex-col justify-center items-center">
        <div class="flex flex-col items-center p-6 my-5 rounded-lg shadow-lg bg-red max-w-xl">
            {{ include('comment/_form.html.twig', {'button_label': 'comment.update'|trans}) }}
        </div>
        <div class="h-20 inline-flex flex-col md:flex-row shadow-md hover:shadow-lg focus:shadow-lg" role="group">
            <div class="flex items-center justify-center">
                {{ component('_button', {
                    buttonUrl: path('program_episode_show', {'slug': program.slug, 'seasonId': season.id, 'episode_slug': episode.slug}),
                    buttonText: 'Back'|trans
                }) }}
                {{ include('comment/_delete_form.html.twig') }}
            </div>
        </div>
    </section>

{% endblock %}
